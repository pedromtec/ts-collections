{
  "compilerOptions": {
    
    "target": "ES2020",                                  
    "module": "CommonJS",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                     
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",    
    "noEmit": true                             
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
